 static efi_status_t efi_unsupported(const char *funcname)
 {
@@ -440,6 +447,8 @@ static efi_status_t EFIAPI efi_close_event(struct efi_event *event)
 	return EFI_EXIT(EFI_INVALID_PARAMETER);
 }
 
+#undef _DEBUG
