 static efi_status_t EFIAPI efi_check_event(struct efi_event *event)
 {
 	int i;
@@ -457,6 +466,8 @@ static efi_status_t EFIAPI efi_check_event(struct efi_event *event)
 	}
 	return EFI_EXIT(EFI_INVALID_PARAMETER);
 }
